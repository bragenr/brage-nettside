body{width:100%;max-width:600px;margin:0 auto;font-family:sans-serif;background-color:#000;color:#fff;font-size:16px}.icon-wrapper{padding:3em;display:flex;justify-content:space-evenly;margin:auto}.icon-wrapper a img{transition:transform .3s ease;width:75px;height:75px}.icon-wrapper a img:hover{transform:scale(1.05)}.thm-card{display:flex;justify-content:center}a:link,a:visited{color:inherit;text-decoration:none}a:hover{text-decoration:underline}a:active{color:green}nav{width:auto;padding:1em}nav ul{list-style:none;padding:0;margin:0;display:flex;justify-content:space-between}nav ul li a{padding:10px 15px;text-decoration:none;color:inherit}nav ul li a:hover{text-decoration:underline}footer{padding:2em;text-align:center;font-size:.875rem}h1{text-align:center}p{text-align:start;font-size:1rem}