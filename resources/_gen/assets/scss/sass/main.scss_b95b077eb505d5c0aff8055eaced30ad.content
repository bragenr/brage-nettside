body{width:600px;margin:0 auto;font-family:sans-serif;background-color:#fff;color:#000;transition:background-color .3s,color .3s}body.dark-mode{background-color:#000;color:#fff}nav{width:100%;padding:1em}nav ul{list-style:none;padding:0;margin:0;display:flex;justify-content:space-between}nav ul li{margin-right:0}nav ul li a{padding:10px 15px;text-decoration:none;color:inherit}nav ul li a:hover{text-decoration:underline}footer{padding:10px;text-align:center}.dark-mode-toggle{background-color:inherit;border:none;cursor:pointer;padding:10px 15px;position:absolute;top:10px;right:10px;z-index:1000;font-size:1.2em}